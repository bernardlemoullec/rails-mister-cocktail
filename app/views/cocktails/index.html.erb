<div class="container">
  <h1>All cocktails</h1>
    <div class="row">
        <% @cocktails.each do |cocktail| %>
          <div class="card col-4">
              <%= link_to cocktail.name, cocktail_path(cocktail) %>
          </div>
        <% end %>
      <%= link_to "Create a new Cocktail", new_cocktail_path, class: 'btn btn-primary' %>
  </div>
</div>
