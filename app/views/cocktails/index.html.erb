<div class="container">
  <h1>All cocktails</h1>
    <div class="row">
        <% @cocktails.each do |cocktail| %>
          <div class="card col-4">
              <h1><%= cl_image_tag cocktail.photo.key, height: 300, width: 400, crop: :fill %></h1>
              <%= link_to cocktail.name, cocktail_path(cocktail) %>
          </div>
        <% end %>
      <%= link_to "Create a new Cocktail", new_cocktail_path, class: 'btn btn-primary' %>
  </div>
</div>
