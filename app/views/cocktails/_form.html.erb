<%= form_for(cocktail) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :ingredients %>
    <%= f.text_field :ingredients, class: 'form-control' %>
  </div>
    <div class="form-group">
    <%= f.label :doses %>
    <%= f.text_field :doses, class: 'form-control' %>
  </div>
  <div class="mt-3">
    <%= f.submit class: 'btn btn-primary' %>
    <%= link_to 'Cancel', '#', class: 'btn btn-danger ml-2' %>
  </div>
  <div class="form-group">
    <%= f.label :photo %>
    <%= f.input :photo, as: :file, class: 'form-control' %>
  </div>
<% end %>
